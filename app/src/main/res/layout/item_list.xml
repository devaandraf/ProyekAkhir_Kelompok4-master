<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="15dp"
    android:elevation="6dp"
    android:layout_margin="5dp"
    app:cardUseCompatPadding="true">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#34c272"
        android:padding="15dp">

        <ImageView
            android:id="@+id/img_buku"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:src="@mipmap/ic_launcher" />

        <TextView
            android:id="@+id/tv_judul_buku"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Judul Buku"
            android:fontFamily="@font/montserrat"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:layout_toRightOf="@id/img_buku"
            android:layout_marginLeft="5dp"/>

        <TextView
            android:id="@+id/tv_genre"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Genre"
            android:fontFamily="@font/montserrat"
            android:textSize="20sp"
            android:textColor="@color/white"
            android:layout_toRightOf="@id/img_buku"
            android:layout_below="@id/tv_judul_buku"
            android:layout_marginLeft="5dp"/>

        <TextView
            android:id="@+id/tv_penulis"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Penulis"
            android:fontFamily="@font/montserrat"
            android:textSize="20sp"
            android:textColor="@color/white"
            android:layout_toRightOf="@id/img_buku"
            android:layout_below="@id/tv_genre"
            android:layout_marginLeft="5dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="horizontal"
            android:layout_below="@id/tv_penulis">

            <Button
                android:id="@+id/btn_edit"
                android:layout_width="173dp"
                android:layout_height="27dp"
                android:textColor="@color/white"
                android:text="Edit"
                android:fontFamily="@font/montserrat_bold"
                android:layout_marginRight="5dp"
                android:background="@drawable/bg_button3"
                android:textAllCaps="false"/>

            <Button
                android:id="@+id/btn_delete"
                android:background="@drawable/bg_button_warning"
                android:layout_width="173dp"
                android:layout_height="27dp"
                android:fontFamily="@font/montserrat_bold"
                android:layout_marginLeft="5dp"
                android:textColor="@color/white"
                android:text="Delete"
                android:textAllCaps="false"/>

        </LinearLayout>

    </RelativeLayout>

</androidx.cardview.widget.CardView>